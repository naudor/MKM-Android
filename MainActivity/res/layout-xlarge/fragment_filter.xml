        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:BannerView="http://schemas.android.com/apk/lib/com.smaato.soma"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#efebe7"
        android:focusable="false"
        android:orientation="vertical" >

    <RelativeLayout 
		android:layout_width="fill_parent"
		android:layout_height="50dp" 
		android:id="@+id/filter_relative_layout">
		<com.smaato.soma.BannerView
			android:id="@+id/banner_filter"
			android:layout_width="fill_parent"
			android:layout_height="50dp"
			android:layout_alignParentLeft="true"
			android:layout_alignParentTop="true"
			BannerView:loadNewBanner="true" />
		</RelativeLayout>

     <ScrollView
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left|top"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:weightSum="1" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="74dp"
                        android:text="@string/condition_card"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="15dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent">

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/checkFilterMT4"
                            android:layout_marginLeft="5dp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageFilterMint"
                            android:src="@drawable/mt"
                            android:minWidth="20dp"
                            android:minHeight="30dp" />

                        <CheckBox
                            android:id="@+id/checkFilterNM"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageFilterNM"
                            android:src="@drawable/nm"
                            android:minWidth="20dp"
                            android:minHeight="30dp" />

                        <CheckBox
                            android:id="@+id/checkFilterEX"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageFilterEX"
                            android:minWidth="20dp"
                            android:minHeight="30dp"
                            android:src="@drawable/ex" />

                        <CheckBox
                            android:id="@+id/checkFilterGD"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageFilterGD"
                            android:src="@drawable/gd"
                            android:minHeight="30dp"
                            android:minWidth="20dp" />

                        <CheckBox
                            android:id="@+id/checkFilterLP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp" />

                        <ImageView
                            android:id="@+id/imageFilterLP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="30dp"
                            android:minWidth="20dp"
                            android:src="@drawable/lp" />

                        <CheckBox
                            android:id="@+id/checkFilterPL"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp" />

                        <ImageView
                            android:id="@+id/imageFilterPL"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="30dp"
                            android:minWidth="20dp"
                            android:src="@drawable/pl" />

                        <CheckBox
                            android:id="@+id/checkFilterPO"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp" />

                        <ImageView
                            android:id="@+id/imageFilterPO"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="30dp"
                            android:minWidth="20dp"
                            android:src="@drawable/po" />

                    </LinearLayout>

                </LinearLayout>

                <!--<Spinner
                    android:layout_width="181dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinnerCondition" />-->

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayoutFoil">

                    <TextView
                        android:id="@+id/textViewDetailConditionValue"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:minWidth="74dp"
                        android:text="@string/language_card"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="15dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent" >

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/checkFilterEN"
                            android:layout_marginLeft="5dp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageFilterEN"
                            android:src="@drawable/anglaterra"
                            android:minWidth="20dp"
                            android:minHeight="30dp" />

                        <CheckBox
                            android:id="@+id/checkFilterFR"
                            android:layout_width="wrap_content"
