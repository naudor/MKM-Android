                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageFilterFR"
                            android:src="@drawable/francia"
                            android:minWidth="20dp"
                            android:minHeight="30dp"
                            android:focusable="false" />

                        <CheckBox
                            android:id="@+id/checkFilterGR"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageFilterGR"
                            android:minWidth="20dp"
                            android:minHeight="30dp"
                            android:src="@drawable/alemania" />

                        <CheckBox
                            android:id="@+id/checkFilterSP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageFilterSP"
                            android:src="@drawable/espanya"
                            android:minHeight="30dp"
                            android:minWidth="20dp" />

                        <CheckBox
                            android:id="@+id/checkFilterIT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp" />

                        <ImageView
                            android:id="@+id/imageFilterIT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="30dp"
                            android:minWidth="20dp"
                            android:src="@drawable/italia" />

                        <CheckBox
                            android:id="@+id/checkFilterCH"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp" />

                        <ImageView
                            android:id="@+id/imageFilterCH"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="30dp"
                            android:minWidth="20dp"
                            android:src="@drawable/xina" />

                        <CheckBox
                            android:id="@+id/checkFilterJP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp" />

                        <ImageView
                            android:id="@+id/imageFilterJP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="30dp"
                            android:minWidth="20dp"
                            android:src="@drawable/japo" />

                        <CheckBox
                            android:id="@+id/checkFilterPT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp" />

                        <ImageView
                            android:id="@+id/imageFilterPT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="30dp"
                            android:minWidth="20dp"
                            android:src="@drawable/portugal" />

                        <CheckBox
                            android:id="@+id/checkFilterRU"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp" />

                        <ImageView
                            android:id="@+id/imageFilterRU"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="30dp"
                            android:minWidth="20dp"
                            android:src="@drawable/rusia" />

                        <CheckBox
                            android:id="@+id/checkFilterKO"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp" />

                        <ImageView
                            android:id="@+id/imageFilterKO"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="30dp"
                            android:minWidth="20dp"
                            android:src="@drawable/korea" />

                        <CheckBox
                            android:id="@+id/checkFilterCHT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp" />

                        <ImageView
                            android:id="@+id/imageFilterCHT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="30dp"
                            android:minWidth="20dp"
                            android:src="@drawable/xinot" />

                    </LinearLayout>
                </LinearLayout>

                <!-- <com.MKMAndroid.classes.MultiSpinner
                     android:layout_width="181dp"
                     android:layout_height="wrap_content"
                     android:id="@+id/spinnerLanguage" />-->

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="1" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="74dp"
                        android:text="@string/others"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="15dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" >

                        <CheckBox
                            android:id="@+id/checkFilterFoil"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp" />

                        <ImageView
                            android:id="@+id/imageFilterFoil"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="30dp"
                            android:minWidth="20dp"
                            android:src="@drawable/foil" />

                        <CheckBox
                            android:id="@+id/checkFilterAltered"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp" />

                        <ImageView
                            android:id="@+id/imageFilterAltered"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="30dp"
                            android:minWidth="20dp"
                            android:src="@drawable/altered" />

                        <CheckBox
                            android:id="@+id/checkFilterSigned"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp" />

                        <ImageView
                            android:id="@+id/imageFilterSigned"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="30dp"
                            android:minWidth="20dp"
                            android:src="@drawable/signed" />

                        <CheckBox
                            android:id="@+id/checkFilterPlayset"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp" />

                        <ImageView
                            android:id="@+id/imageFilterPlayset"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="30dp"
                            android:minWidth="20dp"
                            android:src="@drawable/playset" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textGuio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="74dp"
                    android:text="@string/minium_amount"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="15dp" />

                <EditText
                    android:layout_width="52dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/textAmount"
                    android:layout_marginLeft="5dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:weightSum="1">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/filter"
                    android:id="@+id/buttonFilter"
                    android:layout_gravity="center_horizontal"
                    style="@android:style/Widget.Button"
                    android:width="100dp" />

                <Button
                    android:id="@+id/buttonResetFilter"
                    style="@android:style/Widget.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:text="@string/reset_filter"
                    android:width="100dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
