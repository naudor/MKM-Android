        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:BannerView="http://schemas.android.com/apk/lib/com.smaato.soma"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#efebe7"
        android:focusable="false"
        android:orientation="vertical" >

    <RelativeLayout 
		android:layout_width="fill_parent"
		android:layout_height="50dp" 
		android:id="@+id/filter_relative_layout">
		<com.smaato.soma.BannerView
			android:id="@+id/banner_filter"
			android:layout_width="fill_parent"
			android:layout_height="50dp"
			android:layout_alignParentLeft="true"
			android:layout_alignParentTop="true"
			BannerView:loadNewBanner="true" />
		</RelativeLayout>

     <ScrollView
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:id="@+id/scrollView">
    </ScrollView>

     <TableLayout
         android:id="@+id/tableLayoutCondition"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginLeft="5dp"
         android:layout_marginTop="5dp" >

         <TableRow
             android:id="@+id/tableRow1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" >

             <TextView
                 android:id="@+id/textView"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:minWidth="74dp"
                 android:text="@string/condition_card"
                 android:textAppearance="?android:attr/textAppearanceMedium"
                 android:textSize="15dp" />
         </TableRow>

         <TableRow
             android:id="@+id/tableRow2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" >

             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal" >

                 <ImageView
                     android:id="@+id/imageFilterMint"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:minHeight="30dp"
                     android:minWidth="20dp"
                     android:src="@drawable/mt" />

                 <TextView
                     android:id="@+id/textCardNameDetail"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_vertical"
                     android:layout_marginLeft="5dp"
                     android:text="@string/mint"
                     android:textAppearance="?android:attr/textAppearanceSmall" />
             </LinearLayout>

             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="10dp"
                 android:orientation="horizontal" >

                 <ImageView
                     android:id="@+id/imageFilterNM"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:minHeight="30dp"
                     android:minWidth="20dp"
                     android:src="@drawable/nm" />

                 <TextView
                     android:id="@+id/textViewDetailConditionValue"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_vertical"
                     android:layout_marginLeft="5dp"
                     android:text="@string/near_mint"
                     android:textAppearance="?android:attr/textAppearanceSmall" />
             </LinearLayout>

             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="15dp"
                 android:orientation="horizontal" >

                 <ImageView
                     android:id="@+id/imageFilterEX"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:minHeight="30dp"
                     android:minWidth="20dp"
                     android:src="@drawable/ex" />

                 <TextView
                     android:id="@+id/textViewDetailUserNameValue"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_vertical"
                     android:layout_marginLeft="5dp"
                     android:text="@string/excellent"
                     android:textAppearance="?android:attr/textAppearanceSmall" />
             </LinearLayout>

             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="15dp"
                 android:orientation="horizontal" >

                 <ImageView
                     android:id="@+id/imageFilterGD"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:minHeight="30dp"
                     android:minWidth="20dp"
                     android:src="@drawable/gd" />

                 <TextView
                     android:id="@+id/textView9"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_vertical"
                     android:layout_marginLeft="5dp"
                     android:text="@string/good"
                     android:textAppearance="?android:attr/textAppearanceSmall" />
             </LinearLayout>

             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="15dp" >

                 <ImageView
                     android:id="@+id/imageFilterLP"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:minHeight="30dp"
                     android:minWidth="20dp"
                     android:src="@drawable/lp" />

                 <TextView
                     android:id="@+id/textViewDetailCountrySeller"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_vertical"
                     android:layout_marginLeft="5dp"
                     android:text="@string/light_played"
                     android:textAppearance="?android:attr/textAppearanceSmall" />
             </LinearLayout>

             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:layout_marginLeft="15dp" >

                 <ImageView
                     android:id="@+id/imageFilterPL"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:minHeight="30dp"
                     android:minWidth="20dp"
                     android:src="@drawable/pl" />

                 <TextView
                     android:id="@+id/textViewDetailCommentsValue"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_vertical"
                     android:layout_marginLeft="5dp"
                     android:text="@string/played"
                     android:textAppearance="?android:attr/textAppearanceSmall" />
             </LinearLayout>

             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:layout_marginLeft="15dp" >

                 <ImageView
                     android:id="@+id/imageFilterPO"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:minHeight="30dp"
                     android:minWidth="20dp"
                     android:src="@drawable/po" />

                 <TextView
                     android:id="@+id/textDetailSigned"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_vertical"
                     android:layout_marginLeft="5dp"
                     android:text="@string/poor"
                     android:textAppearance="?android:attr/textAppearanceSmall" />
             </LinearLayout>

         </TableRow>
     </TableLayout>

     <TableLayout
         android:id="@+id/tableLayoutSeller"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginLeft="5dp" >

         <TableRow
             android:id="@+id/tableRow5"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" >

             <TextView
                 android:id="@+id/TextView01"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="20dp"
                 android:minWidth="74dp"
                 android:text="@string/seller"
                 android:textAppearance="?android:attr/textAppearanceMedium"
                 android:textSize="15dp" />
         </TableRow>

         <TableRow
             android:id="@+id/tableRow6"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" >

             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent" >

                 <ImageView
                     android:id="@+id/imageViewDetailFoil"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:minHeight="30dp"
                     android:minWidth="20dp"
                     android:src="@drawable/no_reputation" />

                 <TextView
                     android:id="@+id/textView13"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_vertical"
                     android:layout_marginLeft="5dp"
                     android:text="@string/new_seller"
                     android:textAppearance="?android:attr/textAppearanceSmall" />
             </LinearLayout>

             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="15dp" >

                 <ImageView
                     android:id="@+id/imageViewDetailAltered"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:minHeight="30dp"
                     android:minWidth="20dp"
                     android:src="@drawable/reputation0" />

                 <TextView
                     android:id="@+id/textView14"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_vertical"
                     android:layout_marginLeft="5dp"
                     android:text="@string/average_seller"
                     android:textAppearance="?android:attr/textAppearanceSmall" />
             </LinearLayout>

             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="15dp" >

                 <ImageView
                     android:id="@+id/imageViewDetailPlayset"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:minHeight="30dp"
                     android:minWidth="20dp"
                     android:src="@drawable/reputation3" />

                 <TextView
                     android:id="@+id/textView15"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_vertical"
                     android:layout_marginLeft="5dp"
                     android:text="@string/good_seller"
                     android:textAppearance="?android:attr/textAppearanceSmall" />
             </LinearLayout>

             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:layout_marginLeft="15dp" >

                 <ImageView
                     android:id="@+id/imageViewDetailSigned"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:minHeight="30dp"
                     android:minWidth="20dp"
                     android:src="@drawable/reputation2" />

                 <TextView
                     android:id="@+id/textView16"
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_vertical"
                     android:layout_marginLeft="5dp"
                     android:layout_weight="1"
                     android:text="@string/very_good_seller"
                     android:textAppearance="?android:attr/textAppearanceSmall" />
             </LinearLayout>

             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:layout_marginLeft="15dp" >

                 <ImageView
                     android:id="@+id/imageViewDetailSellerComercial"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:minHeight="30dp"
                     android:minWidth="20dp"
                     android:src="@drawable/reputation1" />

                 <TextView
                     android:id="@+id/textView17"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_vertical"
                     android:layout_marginLeft="5dp"
                     android:text="@string/outstanding_seller"
                     android:textAppearance="?android:attr/textAppearanceSmall" />
             </LinearLayout>

         </TableRow>
     </TableLayout>

     <TableLayout
         android:id="@+id/tableLaoutOthers"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginLeft="5dp" >

         <TableRow
             android:id="@+id/tableRow12"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" >

             <TextView
                 android:id="@+id/textView4"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="20dp"
                 android:minWidth="74dp"
                 android:text="@string/others"
                 android:textAppearance="?android:attr/textAppearanceMedium"
                 android:textSize="15dp" />

         </TableRow>

         <TableRow
             android:id="@+id/tableRow13"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" >

             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:orientation="horizontal" >

                 <ImageView
                     android:id="@+id/imageFilterFoil"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:minHeight="30dp"
                     android:minWidth="20dp"
                     android:src="@drawable/foil" />

                 <TextView
                     android:id="@+id/textGuio"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_vertical"
                     android:layout_marginLeft="5dp"
                     android:text="@string/foil"
                     android:textAppearance="?android:attr/textAppearanceSmall" />
             </LinearLayout>

             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:layout_marginLeft="15dp"
                 android:orientation="horizontal" >

                 <ImageView
                     android:id="@+id/imageFilterAltered"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:minHeight="30dp"
                     android:minWidth="20dp"
                     android:src="@drawable/altered" />

                 <TextView
                     android:id="@+id/textViewDetailReputationSeller"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_vertical"
                     android:layout_marginLeft="5dp"
                     android:text="@string/altered"
                     android:textAppearance="?android:attr/textAppearanceSmall" />
             </LinearLayout>

             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:layout_marginLeft="15dp"
                 android:orientation="horizontal" >

                 <ImageView
                     android:id="@+id/imageFilterSigned"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:minHeight="30dp"
                     android:minWidth="20dp"
                     android:src="@drawable/signed" />

                 <TextView
                     android:id="@+id/textView11"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_vertical"
                     android:layout_marginLeft="5dp"
                     android:text="@string/signed"
                     android:textAppearance="?android:attr/textAppearanceSmall" />
             </LinearLayout>

             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:layout_marginLeft="15dp"
                 android:orientation="horizontal" >

                 <ImageView
                     android:id="@+id/imageFilterPlayset"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:minHeight="30dp"
                     android:minWidth="20dp"
                     android:src="@drawable/playset" />

                 <TextView
                     android:id="@+id/textViewExpansionName"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_vertical"
                     android:layout_marginLeft="5dp"
                     android:text="@string/only_playset"
                     android:textAppearance="?android:attr/textAppearanceSmall" />
             </LinearLayout>

         </TableRow>
     </TableLayout>
</LinearLayout>
